{
  "name": "flynn-pr-apps",
  "version": "1.0.0",
  "author": "artemave <artemave@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.1",
    "yarn": "1.3.2"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "github": "^12.1.0",
    "httpism": "^3.8.0",
    "js-yaml": "^3.10.0",
    "morgan": "^1.9.0"
  },
  "scripts": {
    "start": "nf start",
    "test": "yarn standard && yarn test-memory && yarn test-local && yarn test-real",
    "test-memory": "yarn cucumber",
    "test-memory-debug": "yarn cucumber-debug",
    "test-local": "CUCUMBER_ASSEMBLY=local yarn cucumber",
    "test-local-debug": "CUCUMBER_ASSEMBLY=local yarn cucumber-debug",
    "test-real": "CUCUMBER_ASSEMBLY=github yarn cucumber features/{deployPullRequest,destroyApp}.feature",
    "test-real-debug": "CUCUMBER_ASSEMBLY=github yarn cucumber-debug features/{deployPullRequest,destroyApp}.feature",
    "cucumber": "DEBUG=pr-apps* cucumberjs --backtrace",
    "cucumber-debug": "node --inspect-brk ./node_modules/.bin/cucumber.js",
    "standard": "standard $(git ls-files | grep -e '.js$')"
  },
  "devDependencies": {
    "basicauth-middleware": "^3.0.0",
    "chai": "^4.1.2",
    "cucumber": "^3.1.0",
    "cucumber-pretty": "^1.3.2",
    "express-subdomain": "^1.0.5",
    "foreman": "^2.0.0",
    "git-http-backend": "^1.0.2",
    "mocha": "^4.0.1",
    "ngrok": "^2.2.24",
    "nodemon": "^1.12.1",
    "standard": "^10.0.3",
    "trytryagain": "^1.2.0"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
